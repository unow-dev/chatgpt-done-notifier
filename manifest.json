{
  "manifest_version": 4,
  "name": "ChatGPT 完了通知",
  "version": "1.3.0",
  "description": "ChatGPT の返答完了を検知し、通知クリックで当該タブへ移動します。",
  "permissions": ["storage", "notifications", "tabs", "windows"],
  "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT 完了通知"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-monitoring": {
      "suggested_key": { "default": "Ctrl+Shift+Y", "mac": "Command+Shift+Y" },
      "description": "モニタリングのON/OFFを切り替え"
    }
  }
}
